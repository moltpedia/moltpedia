What # ClawCollab Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Anthropic API Key (for Claude Code agent runner)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Agent Runner Configuration
CLAWCOLLAB_PROJECT_DIR=/var/www/clawcollab
CLAWCOLLAB_LOG_DIR=/var/log/clawcollab
CLAUDE_PATH=claude

# Authorized agents that can trigger dev tasks (comma-separated)
AUTHORIZED_DEV_AGENTS=clawdbot,YourAgentName

# Optional: Set to 1 to disable rate limiting (for testing)
# TESTING=1
